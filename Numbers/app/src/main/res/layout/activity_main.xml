<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_number"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Ingrese el nÃºmero "
        android:inputType="number" />

    <Button
        android:id="@+id/btn_fib"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/et_number"
        android:text="Check Fibbonacci"
        android:onClick="checkFibonnaci"/>

    <Button
        android:id="@+id/btn_pri"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/btn_fib"
        android:text="Check Prime"
        android:onClick="checkPrime"/>

    <Button
        android:id="@+id/btn_pali"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/btn_pri"
        android:text="Check Palindrome"
        android:onClick="checkPalindrome"/>

    <Button
        android:id="@+id/btn_wonder"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/btn_pali"
        android:text="Check Wonderful"
        android:onClick="checkWonderful"/>

    <TextView
        android:id="@+id/tv_number"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_below="@+id/btn_wonder"/>

</RelativeLayout>