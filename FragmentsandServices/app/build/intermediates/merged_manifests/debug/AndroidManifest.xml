            android:name="com.example.fragmentsandservices.Ejercicio2Activity"
            android:label="Ejemplo 2"
            android:parentActivityName="com.example.fragmentsandservices.MainActivity" />
        <activity
            android:name="com.example.fragmentsandservices.Ejercicio1Activity"
            android:label="Ejemplo 1"
            android:parentActivityName="com.example.fragmentsandservices.MainActivity" />
        <activity android:name="com.example.fragmentsandservices.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.example.fragmentsandservices.MiCrono" />

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.example.fragmentsandservices.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>